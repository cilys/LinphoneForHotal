<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/x20"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="@dimen/y285"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/y16"
            android:paddingRight="@dimen/y16"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Available_until"
                android:textSize="@dimen/x16"
                android:textColor="#8019191B" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Happy_Hours_2x1"
                android:layout_marginTop="@dimen/y15"
                android:textSize="@dimen/x25"
                android:textColor="@color/color_main_text_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Order_dinner_by"
                android:textSize="@dimen/x16"
                android:layout_marginTop="@dimen/y2"
                android:textColor="#8F19191B" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>