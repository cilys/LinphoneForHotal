<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_round_bg_white"
    tools:context=".ui.menu.amen.AmentiesAc">

    <include
        layout="@layout/common_title_gray_line" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/amen_margin"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pillow"
                style="@style/style_scroll_nav"
                android:text="@string/bedding_pillows"/>

            <TextView
                android:id="@+id/in_room"
                style="@style/style_scroll_nav"
                android:text="@string/in_room"/>

            <TextView
                android:id="@+id/laundries"
                style="@style/style_scroll_nav"
                android:text="@string/laundries"/>

            <TextView
                android:id="@+id/towels"
                style="@style/style_scroll_nav"
                android:text="@string/towels"/>

            <TextView
                android:id="@+id/bath"
                style="@style/style_scroll_nav"
                android:text="@string/bath"/>

            <TextView
                android:id="@+id/drinks"
                style="@style/style_scroll_nav"
                android:text="@string/drinks"/>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        style="@style/style_splite_line_h_light_gray"
        android:background="@color/color_split_line_light_gray_half"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bg_redius"
        android:paddingRight="@dimen/bg_redius"
        android:gravity="center_vertical"
        android:background="@drawable/shape_round_bg_black">

        <TextView
            android:id="@+id/bottom_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/Items_0"
            android:textColor="@color/white"
            android:textSize="@dimen/x25"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/icon_car_white" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="@dimen/y150"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/x25"
            android:text="$235.00"
            android:gravity="center" />

        <ImageView
            android:layout_width="@dimen/y24"
            android:layout_height="@dimen/y24"
            android:src="@mipmap/icon_arrow_top_white"
            android:rotation="90" />

    </LinearLayout>

</LinearLayout>