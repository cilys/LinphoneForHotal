<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_round_bg_white"
    tools:context=".ui.amen.AmenitiesCheckoutAc">

    <include
        layout="@layout/common_title_gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/amen_margin"
        android:paddingRight="@dimen/amen_margin">
        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.cilys.linphoneforhotal.view.MyListView
                    android:id="@+id/lv_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommendations for you"
                    android:textSize="@dimen/x18"
                    android:textColor="@color/color_gray_text_color"
                    android:textAllCaps="false"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="wrap_content" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:orientation="horizontal">

                        <LinearLayout
                            style="@style/style_amen_recommend_layout" >
                            <ImageView
                                android:id="@+id/recommend_extra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Extra Towel"
                                    android:textColor="@color/color_main_text_color"
                                    android:textSize="@dimen/x25" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_gray_text_color"
                                    android:textSize="@dimen/x25"
                                    android:text="$25.00"
                                    android:textAllCaps="false" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/add"
                                android:layout_width="@dimen/bg_redius"
                                android:layout_height="@dimen/bg_redius"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/y25"
                                    android:layout_height="@dimen/y25"
                                    android:src="@mipmap/icon_add_white" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/style_amen_recommend_layout" >
                            <ImageView
                                android:id="@+id/recommend_kit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Extra Towel"
                                    android:textColor="@color/color_main_text_color"
                                    android:textSize="@dimen/x25" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_gray_text_color"
                                    android:textSize="@dimen/x25"
                                    android:text="$25.00"
                                    android:textAllCaps="false" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/add_2"
                                android:layout_width="@dimen/bg_redius"
                                android:layout_height="@dimen/bg_redius"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/y25"
                                    android:layout_height="@dimen/y25"
                                    android:src="@mipmap/icon_add_white" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Bill Details"
                    android:textSize="@dimen/x18"
                    android:textColor="@color/color_gray_text_color" />

                <include layout="@layout/common_bill" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:textColor="@color/color_gray_text_color"
                    android:textSize="@dimen/x25"
                    android:textAllCaps="false" />

                <EditText
                    android:id="@+id/remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your comment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/x20"
                        android:layout_weight="1"
                        android:textColor="@color/color_gray_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash"
                        android:textColor="@color/color_gray_text_color"
                        android:textSize="@dimen/x20"
                        android:textAllCaps="false"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <include layout="@layout/common_bottom_confirm" />
    </RelativeLayout>





</LinearLayout>