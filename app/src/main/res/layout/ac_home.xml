<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAc">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y756"
        >

        <ImageView
            android:id="@+id/img_room_control"
            android:layout_width="@dimen/x225"
            android:layout_height="@dimen/y58"
            android:layout_marginTop="@dimen/y40"
            android:src="@mipmap/icon_room"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x76"/>

        <ImageView
            android:id="@+id/img_tv_remote"
            android:layout_width="@dimen/x225"
            android:layout_height="@dimen/y58"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x76"
            android:layout_marginTop="@dimen/y108"
            android:src="@mipmap/icon_tv"/>

        <RelativeLayout
            android:layout_width="@dimen/x688"
            android:layout_height="@dimen/y320"
            android:layout_marginLeft="@dimen/x56"
            android:layout_marginRight="@dimen/x56"
            android:layout_marginTop="@dimen/y326"
            android:id="@+id/rl_head_weather"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:paddingTop="@dimen/y28"
            android:paddingBottom="@dimen/y28" >

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FCF9F9"
                android:textSize="@dimen/x30"
                android:text="Room 2021" />

            <TextView
                android:id="@+id/tv_custom_name"
                android:layout_width="@dimen/x250"
                android:maxHeight="@dimen/y80"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x30"
                android:textColor="#FCF9F9"
                android:layout_below="@+id/tv_room_name"
                android:layout_marginTop="@dimen/y2"
                android:text="Hello, Adam Miller!"/>
            
            <RelativeLayout
                android:layout_width="@dimen/x250"
                android:layout_height="@dimen/y50"
                android:layout_marginTop="@dimen/y80"
                android:background="@mipmap/ic_home_head_message_bg" >

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#19191B"
                    android:textSize="@dimen/x16"
                    android:gravity="center"
                    android:text="You have 2Message"/>

                <ImageView
                    android:id="@+id/img_msg_notify"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/y20"
                    android:src="@mipmap/icon_red_point"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x224"
                android:layout_height="@dimen/y140"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/y20"
                    android:src="@mipmap/icon_location"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="@dimen/x86"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/y52"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/img_location"
                    android:textSize="@dimen/x20"
                    android:textColor="#FFF"
                    android:text="New York"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="@dimen/x224"
                    android:layout_height="@dimen/y66"
                    android:layout_marginTop="@dimen/y28"
                    android:textColor="#FFF"
                    android:textSize="@dimen/x50"
                    android:text="10:18PM"
                    />

                <TextView
                    android:id="@+id/tv_weekday"
                    android:layout_width="@dimen/x150"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/y90"
                    android:textSize="@dimen/x20"
                    android:textColor="#B8B8B8"
                    android:maxHeight="@dimen/y52"
                    android:layout_alignParentRight="true"
                    android:text="Wed, 9 Dec\n2020"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y68"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/y126">
                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/y32"
                    android:src="@mipmap/icon_weather_cloudy" />

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="@dimen/x52"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/y66"
                    android:layout_toRightOf="@+id/img_weather"
                    android:textSize="@dimen/x25"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/x5"
                    android:text="-3 â„ƒ"
                    android:textColor="#FFF" />
            </RelativeLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_donot_disturb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_donot_disturb"/>

                <View
                    android:layout_width="@dimen/x10"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/img_make_up_room"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_make_up_room"/>
                <View
                    android:layout_width="@dimen/x10"
                    android:layout_height="1dp" />
                <ImageView
                    android:id="@+id/img_service_menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_service_menu"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y390"
        android:layout_marginTop="@dimen/y675"
        android:id="@+id/rl_home_promo"
        >



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y270"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/y30"
        android:id="@+id/ll_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x75"
            android:background="@mipmap/ic_home_bottom_qr_test"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/icon_phone"
                />

            <ImageView
                android:id="@+id/img_service_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/icon_service_call"
                />

            <ImageView
                android:id="@+id/img_voice_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/icon_voice_mail"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>