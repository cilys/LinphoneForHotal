<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"

    android:layout_marginTop="@dimen/y15"
    android:gravity="center_vertical"
    android:background="@drawable/shape_round_bg_room_control_action"
    android:layout_height="@dimen/y115" >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="@dimen/y100"
        android:layout_height="@dimen/y100"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:paddingTop="@dimen/y15"
        android:paddingBottom="@dimen/y15"
        android:orientation="vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/name"
            android:textColor="@color/color_main_text_color"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x16"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price"
            android:textColor="@color/color_main_text_color"
            android:layout_marginTop="@dimen/y10"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x16"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include layout="@layout/common_count_layout" />
</LinearLayout>