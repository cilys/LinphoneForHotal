<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/y25"
    android:paddingBottom="@dimen/y25"
    android:paddingLeft="@dimen/bg_redius"
    android:paddingRight="@dimen/bg_redius"
    android:layout_marginBottom="@dimen/y15"
    android:background="@drawable/shape_round_bg_room_control_action"
    android:layout_height="@dimen/y145" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/red_point"
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x10"
            android:layout_marginRight="@dimen/y25"
            android:src="@mipmap/icon_point_red"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/Service"
            android:textColor="@color/color_main_text_color"
            android:textSize="@dimen/x20" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x16"
            android:text="11 min ago"
            android:textColor="@color/color_gray_text_color"/>
    </LinearLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y18"
        android:text="@string/order_been_accepted"
        android:textColor="@color/color_main_text_color"
        android:textSize="@dimen/x20" />

</LinearLayout>