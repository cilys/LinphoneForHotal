<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_round_bg_white"
    tools:context=".tv.TvAc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_remote_top_title_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bg_redius"
        android:paddingRight="@dimen/bg_redius"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/top_close"
            android:layout_width="@dimen/tv_remote_top_title_height"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:src="@mipmap/icon_back_drak" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TV Remote"
            android:gravity="center"
            android:textColor="@color/color_19191b"
            android:textSize="@dimen/x25"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/top_home"
            android:layout_width="@dimen/tv_remote_top_title_height"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:src="@mipmap/icon_home_drak" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/style_splite_line_h_light_gray"
        android:layout_marginBottom="@dimen/y30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel"
        android:layout_marginLeft="@dimen/y90"
        android:textColor="@color/color_main_text_color"
        android:layout_marginBottom="@dimen/y18"
        android:textSize="@dimen/x18" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/y80"
        android:layout_marginRight="@dimen/y80"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        android:orientation="horizontal"
        android:background="@drawable/shape_round_bg_black">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Remote"
            android:textColor="@color/white"
            android:textSize="@dimen/x25"/>

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="@dimen/bottom_height"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_double_arrow_top_white" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>