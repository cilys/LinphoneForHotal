<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/root"
    android:orientation="vertical"
    tools:context=".ui.food.MealAc">

    <LinearLayout
        android:id="@+id/model_layout"
        android:layout_width="@dimen/x650"
        android:layout_height="@dimen/y850"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y520" >
            <ImageView
                android:id="@+id/pic"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/close"
                android:layout_width="@dimen/y78"
                android:layout_height="@dimen/y78"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/y24"
                    android:layout_height="@dimen/y24"
                    android:src="@mipmap/icon_close_white"/>
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/x25"
            android:layout_marginTop="@dimen/y30"
            android:text="Pasta Alla Filicudara"
            android:layout_marginLeft="@dimen/bg_redius" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/x20"
            android:layout_marginTop="@dimen/y30"
            android:text="Fresh pasta with tuna chunks, cherry tomatoes, onion  capers"
            android:layout_marginLeft="@dimen/bg_redius" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/bg_redius"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x25"
                android:text="$19.99"/>

            <ImageView
                android:id="@+id/add"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x35"
                android:layout_marginLeft="@dimen/x25"
                android:src="@mipmap/icon_add_white_bg" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/bg_redius"
            android:textSize="@dimen/x18"
            android:text="Allergens"
            android:textColor="#80FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x20"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/bg_redius"
            android:layout_marginTop="@dimen/y15"
            android:text="For Gluten/Wheat, Egg, Peanut/Tree Nut, Soy"/>
    </LinearLayout>

</LinearLayout>