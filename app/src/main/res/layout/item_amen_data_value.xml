<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/y15"
    android:paddingBottom="@dimen/y15"
    android:paddingLeft="@dimen/bg_redius"
    android:paddingRight="@dimen/bg_redius"
    android:background="@drawable/shape_round_bg_room_control_action"
    android:layout_height="@dimen/y115" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/y50"
        android:layout_height="@dimen/y72"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/x20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:textColor="@color/color_main_text_color"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x16"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price"
            android:textColor="@color/color_main_text_color"
            android:layout_marginTop="@dimen/y10"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x16"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/reduce"
            android:layout_width="@dimen/bg_redius"
            android:layout_height="@dimen/bg_redius"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/y25"
                android:layout_height="@dimen/y25"
                android:src="@mipmap/icon_reduce_white"/>
        </LinearLayout>



        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_main_text_color"
            android:textSize="@dimen/x18" />

        <LinearLayout
            android:id="@+id/add"
            android:layout_width="@dimen/bg_redius"
            android:layout_height="@dimen/bg_redius"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/y25"
                android:layout_height="@dimen/y25"
                android:src="@mipmap/icon_add_white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>