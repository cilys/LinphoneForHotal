<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/root"
    tools:context=".IncomingAc">

    <LinearLayout
        android:layout_width="@dimen/x650"
        android:layout_height="@dimen/y850"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/ll_model">
        
        <TextView
            android:id="@+id/tv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y104"
            android:text="1001"
            android:textSize="@dimen/x30"
            android:textColor="#FFF"/>

        <ImageView
            android:layout_width="@dimen/y250"
            android:layout_height="@dimen/y250"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/ic_avatar_test"/>

        <TextView
            android:id="@+id/tv_custom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="@dimen/y10"
            android:text="Rober Watson"
            android:textColor="#FFF"
            android:textSize="@dimen/x40"
            android:ellipsize="marquee" />

        <TextView
            android:id="@+id/tv_custom_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Housekeeping"
            android:layout_marginTop="@dimen/y10"
            android:textSize="@dimen/x30"
            android:textColor="#80FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y80"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/img_decline"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:src="@mipmap/icon_call_decline"
                android:layout_marginRight="@dimen/x50" />
            <ImageView
                android:id="@+id/img_call_accept"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:src="@mipmap/icon_call_accept"
                android:layout_marginLeft="@dimen/x50" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>